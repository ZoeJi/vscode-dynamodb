{
    "name": "vscode-dynamodb",
    "displayName": "DynamoDB",
    "description": "Create, browse, and update local and cloud-based DynamoDB instances.",
    "version": "0.0.1",
    "publisher": "hariscodes",
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "views": {
			"explorer": [
				{
					"id": "dynamoExplorer",
					"name": "dynamo",
					"when": "config.dynamo.showExplorer == true"
				}
			]
		},
        "commands": [
            {
                "category": "dynamo",
                "command": "extension.checkConnection",
                "title": "Check Connection"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "dynamo configuration",
            "properties": {
                "dynamo.showExplorer": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show or Hide the dynamo explorer"
                }
            }
        },
        "menus": {
            "view/title": [
				{
					"command": "dynamo.refreshExplorer",
					"when": "view == dynamoExplorer",
					"group": "navigation"
				},
				{
					"command": "dynamo.addServer",
					"when": "view == dynamoExplorer",
					"group": "navigation"
				},
				{
					"command": "dynamo.newScrapbook",
					"when": "view == dynamoExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "dynamo.createDatabase",
					"when": "view == dynamoExplorer && viewItem == dynamoServer"
				},
				{
					"command": "dynamo.removeServer",
					"when": "view == dynamoExplorer && viewItem == dynamoServer"
				},
				{
					"command": "dynamo.connect",
					"when": "view == dynamoExplorer && viewItem == dynamo"
				},
				{
					"command": "dynamo.dropDb",
					"when": "view == dynamoExplorer && viewItem == dynamoDb"
				}
			]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "aws-sdk": "^2.97.0",
        "typescript": "^2.4.2",
        "vscode": "^1.1.4",
        "mocha": "^3.5.0",
        "@types/node": "^8.0.20",
        "@types/mocha": "^2.2.32"
    }
}
